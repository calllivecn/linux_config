[Unit]
Description=Advanced IEEE 802.11 AP and IEEE 802.1X/WPA/WPA2/EAP Authenticator
After=network.target
Wants=hostapd-dnsmasq.service

[Service]
Type=simple
PIDFile=/run/hostapd.pid
Restart=on-failure
RestartSec=5
#Environment=AP0=/etc/hostapd/AP0.conf
#ExecStart=/usr/sbin/hostapd ${AP0}
ExecStart=/etc/hostapd/AP0.sh

[Install]
WantedBy=multi-user.target
